{
  "name": "banking-app",
  "version": "1.0.0",
  "description": "Secure banking application with CI/CD pipeline",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:security": "jest tests/security.test.js",
    "test:unit": "jest tests/unit.test.js",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "security:snyk": "snyk test",
    "security:audit": "npm audit",
    "security:audit-fix": "npm audit fix",
    "build": "docker build -f docker/Dockerfile -t banking-app .",
    "sonar": "sonar-scanner",
    "init-db": "node scripts/init-db.js",
    "migrate": "node scripts/migrate.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --remove-orphans"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "validator": "^13.15.15",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "eslint": "^8.57.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "snyk": "^1.1298.2",
    "sonarqube-scanner": "^3.5.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:security/recommended",
      "plugin:node/recommended"
    ],
    "plugins": [
      "security",
      "node"
    ],
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "no-undef": "error",
      "security/detect-sql-injection": "error",
      "security/detect-object-injection": "error"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "banking",
    "security",
    "fintech",
    "nodejs",
    "express",
    "postgresql",
    "docker",
    "jwt",
    "bcrypt"
  ],
  "author": "Banking Team <team@banking-app.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/company/banking-app.git"
  },
  "bugs": {
    "url": "https://github.com/company/banking-app/issues"
  },
  "homepage": "https://github.com/company/banking-app#readme"
}
